FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

tol 1e-16;
conv 1e-8;

solvers
{
    ".*"
    {
        solver              PCG;
        preconditioner      DIC; //DILU;
        smoother            DIC;
        tolerance           1e-12;
        relTol              0;
    }
}


PIMPLE
{

    nNonOrthogonalCorrectors 0;
    nOuterCorrectors 10000;

    outerCorrectorResidualControl
    {
       ".*" 
        {
            tolerance $conv;
            relTol    0;
        }

    }

    residualControl
    {
        ".*"  $conv;
    }
}


