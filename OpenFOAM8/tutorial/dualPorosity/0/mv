FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      mv;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 0 0 0 0 0];

val 2.0;

internalField   uniform $val;

boundaryField
{
    "left|right|top|bottom"
    {
        // type            calculated;
        type            fixedValue;
        value           uniform     $val;
    }

    frontAndBack
    {
        type            empty;
    }
}

