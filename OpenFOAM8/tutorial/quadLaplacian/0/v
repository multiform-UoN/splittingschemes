FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      u;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    left
    {
        type            fixedValue;
        value           uniform -0.6;
    }

    right
    {
        type            fixedValue;
        value           uniform 0;
    }

    top
    {
        type    zeroGradient;
        // type            noFlux;
    }

    bottom
    {
        type    zeroGradient;
        // type            noFlux;
    }

    frontAndBack
    {
        type            empty;
    }
}

